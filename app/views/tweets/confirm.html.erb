<div class="tweet_confirm">
  <div class="tweet_confirm_form">
    <h3>ほんとについーとする？</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.hidden_field :content %>
      <p><%= @tweet.content %></p>
        <%# word-break: break-all;する %>
      <%= form.submit "する", :class=>"btn"%>
      <%= form.submit "もどる", :class=>"btn", name: 'back' %>
    <% end %>
  </div>
</div>
